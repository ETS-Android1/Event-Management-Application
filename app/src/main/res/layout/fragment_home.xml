<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="#ffe6e6">



    <TableLayout
        android:id="@+id/tl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccffff"
        android:layout_marginBottom="@dimen/_10sdp"

        >
        <TableRow
            android:layout_marginLeft="@dimen/_20sdp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cybersync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#b3d9ff"
                app:cardMaxElevation="6dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_column="1"
                android:focusable="true"
                android:clickable="true"

                android:foreground="?attr/selectableItemBackground"



                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/acme"
                    android:padding="12dp"
                    android:text="Cybersync"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/deptocse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#b3d9ff"
                app:cardMaxElevation="6dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_column="2"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"



                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/acme"
                    android:padding="12dp"
                    android:text="Dept.Of CSE"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

        </TableRow>


        <TableRow
            android:layout_marginLeft="@dimen/_20sdp">
            <androidx.cardview.widget.CardView
                android:id="@+id/std_affair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#b3d9ff"
                app:cardMaxElevation="6dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_column="1"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/acme"
                    android:padding="12dp"
                    android:text="Student Affairs"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/all_clubs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#b3d9ff"
                app:cardMaxElevation="6dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_column="2"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/acme"
                    android:padding="12dp"
                    android:text="All Clubs"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_390sdp"
        android:layout_below="@+id/tl1"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:transcriptMode="alwaysScroll"
        tools:listitem="" />

</RelativeLayout>


